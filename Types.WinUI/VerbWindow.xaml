<Window
    x:Class="Types.WinUI.VerbWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Spacing="12" Padding="20">
            <TextBlock x:Uid="VerbWindow_Title" Text="Action Details" Style="{ThemeResource TitleTextBlockStyle}" />
            
            <TextBox x:Name="ActionIdBox" x:Uid="VerbWindow_ActionID" Header="Action ID" PlaceholderText="Internal ID (e.g. open)" IsReadOnly="True" />
            <TextBox x:Name="MenuTextBox" x:Uid="VerbWindow_MenuText" Header="Menu Text" PlaceholderText="Text shown in context menu" />
            <TextBox x:Name="CommandBox" x:Uid="VerbWindow_Command" Header="Command" PlaceholderText="Application path and arguments" />
            
            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,12,0,0">
                <Button x:Uid="SaveButton" Content="Save" Style="{ThemeResource AccentButtonStyle}" Click="SaveButton_Click" />
                <Button x:Uid="CancelButton" Content="Cancel" Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
